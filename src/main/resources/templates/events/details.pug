extends ../layouts/default

block content
    a(href="/events") back

    h1 #{pippo.formatTime(dateHelper.asDate(event.getDatum()), "dd MMMM yyyy")} (#{event.eventType})

    table.pure-table
        thead
            tr
                th Voornaam
                th Achternaam
                th Type
        tbody
        each partaking in event.partakings
            tr
                td #{partaking.person.voornaam}
                td #{partaking.person.achternaam}
                td
                    i(class="partaking-type #{partaking.partakingType}")

    a.pure-button(href="/events/#{event.id}/partakings/new") Toevoegen
